<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learning.gacrta.anotherpopularmovies.MovieDetail">

    <TextView
        android:id="@+id/tv_error_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_error_detail_text"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_movie_details"
        android:padding="10dp">

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/iv_movie_poster"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tv_movie_title"
            android:layout_alignParentStart="true"
            android:layout_below="@id/iv_movie_poster"
            android:textSize="18sp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tv_movie_original_title"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_movie_title"
            android:textSize="18sp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tv_movie_release_date"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_movie_original_title"
            android:textSize="18sp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tv_movie_user_rating"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_movie_release_date"
            android:textSize="18sp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tv_movie_overview"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_movie_user_rating"
            android:textSize="18sp"/>
    </RelativeLayout>
</FrameLayout>
